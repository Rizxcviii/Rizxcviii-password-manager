{
  "name": "Rizxcviiis' Password Manager",
  "description": "A password management extension that generates USEFUL passwords",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["tabs", "activeTab", "storage", "webRequest", "<all_urls>"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Enter your vault (Remember your keyword...?)"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  }
}
